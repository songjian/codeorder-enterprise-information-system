<section class="content-header">
  <h1>
    招聘管理
    <small>职位列表</small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to admin_path do %>
        <i class="fa fa-home"></i> 首页
      <% end %>
    </li>
    <li>招聘管理</li>
    <li class="active">列表</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12 btn-group">
      <%= link_to '新增', new_admin_job_path, class: 'btn btn-default' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">职位列表</h3>

          <div class="box-tools">
            <div class="input-group input-group-sm">
              <%= search_form_for [:admin, @q], class: 'form-horizontal' do |f| %>
              <%= f.label :name_cont, '搜索职位' %>
              <%= f.search_field :name_cont, placeholder: '请输入职位' %>
              <%= f.submit %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>招聘职位</th>
              <th>职位描述</th>
              <th>操作</th>
            </tr>
            <% @jobs.each do |job| %>
            <tr>
              <td><%= job.name %></td>
              <td><%= job.description %></td>
              <td>
                <%= link_to edit_admin_job_path(job), class: 'btn btn-primary btn-xs' do %>
                  <i class="fa fa-edit"></i> 编辑
                <% end %>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
        <div class="box-footer clearfix">
          <%= paginate @jobs, views_prefix: 'admin' %>

        </div>
      </div>
    </div>
  </div>
</section>
