<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    首页
    <small></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-home active"></i> 首页</a></li>
  </ol>
</section>

<!-- Main content -->
<section class="content">
  <!-- Small boxes (Stat box) -->
  <div class="row">
    <div class="col-lg-3 col-xs-3">
      <!-- small box -->
      <div class="small-box bg-aqua">
        <div class="inner">
          <% headhunters_count = Headhunter.count %>
          <h3><%= headhunters_count %></h3>

          <p>猎头</p>
        </div>
        <div class="icon">
          <i class="ion ion-bag"></i>
        </div>
        <%= link_to admin_headhunters_path, class: 'small-box-footer' do %>
          查看更多 <i class="fa fa-arrow-circle-right"></i>
        <% end %>
      </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-3">
      <!-- small box -->
      <div class="small-box bg-green">
        <div class="inner">
          <h3><%= Company.count %></h3>

          <p>客户</p>
        </div>
        <div class="icon">
          <i class="ion ion-stats-bars"></i>
        </div>
        <%= link_to admin_companies_path, class: "small-box-footer" do %>
          查看更多 <i class="fa fa-arrow-circle-right"></i>
        <% end %>
      </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-xs-3">
      <!-- small box -->
      <div class="small-box bg-yellow">
        <div class="inner">
          <h3><%= Job.count %></h3>

          <p>职位</p>
        </div>
        <div class="icon">
          <i class="ion ion-person-add"></i>
        </div>
        <%= link_to admin_jobs_path, class: 'small-box-footer' do %>
          查看更多 <i class="fa fa-arrow-circle-right"></i></a>
        <% end %>
      </div>
    </div>
    <div class="col-lg-3 col-xs-3">
      <!-- small box -->
      <div class="small-box bg-red">
        <div class="inner">
          <h3><%= Job.count %></h3>

          <p>会员单位</p>
        </div>
        <div class="icon">
          <i class="ion ion-person-add"></i>
        </div>
        <%= link_to admin_jobs_path, class: 'small-box-footer' do %>
          查看更多 <i class="fa fa-arrow-circle-right"></i></a>
        <% end %>
      </div>
    </div>
    <!-- ./col -->
  </div>
  <!-- /.row -->
  <!-- Main row -->
  <div class="row">
  </div>
  <!-- /.row (main row) -->
</section>
<!-- /.content -->
